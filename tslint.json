{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-microsoft-contrib",
        "tslint-consistent-codestyle",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "indent": [
            true,
            "tabs",
            2
        ],
        "jsx-wrap-multiline": true
    },
    "rulesDirectory": []
}
